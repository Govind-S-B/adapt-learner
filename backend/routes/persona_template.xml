<Persona>
    <GeneralInformation>
        <Name>{name}</Name>
        <Age>{age}</Age>
        <GradeLevel>{grade_level}</GradeLevel>
        <CulturalBackground>{cultural_background}</CulturalBackground>
        <LanguageProficiency>{language_proficiency}</LanguageProficiency>
    </GeneralInformation>
    
    <CognitiveProfile>
        <LearningStyles>
            <!-- Describe preferences: visual, auditory, kinesthetic, reading/writing, etc. -->
            <PreferredModalities>{visual/auditory/etc.}</PreferredModalities>
            <!-- Complexity and form preferences -->
            <PreferredComplexityLevel>{simple/advanced}</PreferredComplexityLevel>
            <PreferredFormat>
                <SentenceLength>{short/medium/long}</SentenceLength>
                <PresentationStyle>{bulleted_lists/paragraphs/mixed}</PresentationStyle>
            </PreferredFormat>
            <!-- Preferences regarding how information is conveyed -->
            <InformationProcessing>
                <FactsDirectly>{true/false}</FactsDirectly>
                <GuidedIntuition>{true/false}</GuidedIntuition>
                <NarrativeStylePreferred>{true/false}</NarrativeStylePreferred>
            </InformationProcessing>
        </LearningStyles>
        
        <CognitiveChallenges>
            <Disabilities>
                <!-- For example: dyslexia, ADHD, dyscalculia, etc. -->
                <Item name="dyslexia" accommodations="font choice, extra spacing, audio support"/>
                <!-- Add more as needed -->
            </Disabilities>
            <AttentionSpan>{short/medium/long}</AttentionSpan>
            <MemoryRetentionStyle>{better with repetition/written notes/etc.}</MemoryRetentionStyle>
        </CognitiveProfile>
    
    <MotivationalFactors>
        <Interests>
            <!-- Topics or hobbies the student likes -->
            <Item category="Entertainment" weight="high">Anime, Fantasy Games</Item>
            <Item category="Technology" weight="medium">Robotics</Item>
            <Item category="Sports" weight="low">Soccer</Item>
        </Interests>
        <Dislikes>
            <!-- Topics or styles that disengage the learner -->
            <Item>Overly formal language</Item>
            <Item>Long unbroken paragraphs</Item>
            <Item>Abstract math without context</Item>
        </Dislikes>
        <RelatableAnalogies>
            <!-- Items from the studentâ€™s world you can use to form analogies -->
            <Item>Popular video game mechanics</Item>
            <Item>Social media trends</Item>
            <Item>Favorite animated show characters</Item>
        </RelatableAnalogies>
        <EmotionalFactors>
            <!-- Emotional states that affect learning -->
            <ConfidenceLevelInCoreSubjects math="low" science="medium" literature="high"/>
            <TriggersAnxiety>Timed tests</TriggersAnxiety>
            <Motivates>Encouraging feedback, gamified quizzes</Motivates>
        </EmotionalFactors>
    </MotivationalFactors>
    
    <EnvironmentalContext>
        <PreferredStudyEnvironment>
            <Location>{quiet room, library, bedroom}</Location>
            <TimeOfDay>{morning/afternoon/evening}</TimeOfDay>
            <ToolsNeeded>{noise-cancelling headphones, fidget toy}</ToolsNeeded>
        </PreferredStudyEnvironment>
        <TechnologyAccess>
            <DeviceType>{smartphone/laptop/tablet}</DeviceType>
            <InternetSpeed>High</InternetSpeed>
        </TechnologyAccess>
    </EnvironmentalContext>
    
    <PedagogicalSuggestions>
        <!-- Concrete tips on how to shape the teaching material -->
        <LanguageComplexity reduceJargon="true" useSimpleVocabulary="true"/>
        <FormatSuggestions useShortSentences="true" bulletPointsOverParagraphs="true"/>
        <UseOfAnalogies>
            <Item>Reference their favorite anime for character-driven examples</Item>
            <Item>Use video game achievement systems as analogies for progress milestones</Item>
        </UseOfAnalogies>
        <Chunking recommendedChunkSizeInWords="100"/>
        <InteractiveElements useQuizzes="true" useSimulations="false" useVideos="true"/>
    </PedagogicalSuggestions>
</Persona>
